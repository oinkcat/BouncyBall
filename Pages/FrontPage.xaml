<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
	xmlns:local="clr-namespace:BouncyBall"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="BouncyBall.FrontPage">
    
    <Grid>
        <Image x:Name="backImage" Aspect="AspectFill" />
    
        <Frame BackgroundColor="Gray"
               Padding="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               CornerRadius="8">
	        <VerticalStackLayout Spacing="10">
	    	    <Label FontSize="28" Margin="10" TextColor="#ff4433">
                    Bouncy Ball
                </Label>
		
	    	    <Button Text="Play" BackgroundColor="Yellow" Clicked="Play_Clicked" />
                <Button Text="Settings" Clicked="Settings_Clicked" />
	    	    <Button Text="High Scores" Clicked="HS_Clicked" />
		        <Button Text="Exit" Clicked="Exit_Clicked" />
    	    </VerticalStackLayout>
        </Frame>
        
        <Label TextColor="LightGray" HorizontalOptions="Center" VerticalOptions="End">
            SoftCat, 2023
        </Label>
    </Grid>
</ContentPage>