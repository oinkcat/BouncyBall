<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
	xmlns:local="clr-namespace:BouncyBall"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="BouncyBall.FrontPage">
	<StackLayout HorizontalOptions="Center" VerticalOptions="Center">
		<Label FontSize="24" Margin="10">Bouncy Ball</Label>
		
		<Button Text="Play" Clicked="Play_Clicked" />
		<Button Text="High Scores" Clicked="HS_Clicked" />
		<Button Text="Exit" Clicked="Exit_Clicked" />
	</StackLayout>
</ContentPage>